{{#extend 'css'}}
 <style>
  .authBtn{
    display: inline-block;
    border: 1px solid black;
    margin:0 2rem

  }

 </style>
{{/extend}}

    <div class="views"> 
    <div class="view">
      <div class="page">
        <div class="page-content login-screen-content">
          {{!-- <div class="login-screen-title"></div> --}}

          <div class="navbar">
              <div class="navbar-inner">
                  <div class="left"></div>
                  <div class="center">POST</div>
                  <div class="right"><a href="#" class="open-panel"><i class="icon icon-bars"></i></a></div>
              </div>
          </div> 

          
          <form method="POST" action="/user/postSignup">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="list-block">
              <ul>
                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">Username</div>
                    <div class="item-input">
                      <input type="text" name="username" placeholder="Your username">
                    </div>
                  </div>
                </li>
                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">Email</div>
                    <div class="item-input">
                      <input type="email" name="email" placeholder="Your email">
                    </div>
                  </div>
                </li>

                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">Password</div>
                    <div class="item-input">
                      <input type="password" name="password" placeholder="Your password">
                    </div>
                  </div>
                </li>

                <li class="item-content">
                  <div class="item-inner">
                    <div class="item-title label">Password Again</div>
                    <div class="item-input">
                      <input type="password" name="confirmPassword" placeholder="Your password again">
                    </div>
                  </div>
                </li>

                <input type="submit" id="asubmit" style="visibility: hidden">
              </ul>
            </div>
            <div class="list-block">
              <ul>
                <li><a href="#" class="item-link list-button authBtn">Submit</a></li>
              </ul>
              <div class="list-block-label">
                <p>Already have an account? <a class="external" href="/user/login">Log In</a></p>
                <p><a href="#" class="close-login-screen">&copy 2017</a></p>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

</div>
  {{#extend 'js'}}
   <script>
     (function(){
       var form = document.getElementsByTagName('form')[0];
       // var submit = document.getElementById('asubmit')[0];
       var link = document.getElementsByClassName('authBtn')[0];
       link.onclick = function(){
         form.submit();
         return false
       }
     }())
   </script>
  {{/extend}}

